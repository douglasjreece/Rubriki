@using Microsoft.AspNetCore.Components.Authorization
@using Rubriki.SharedComponents
@page "/score-entry"
@page "/score-entry/{contestantId}"

<PageTitle>Score Entry</PageTitle>

<h3>Score Entry</h3>

<AuthorizeView Roles="Judge, Admin">

    <Authorized>
        <div style="max-width:1000px">
            <ScoreEntryPanel ContestantId="@ContestantId" />
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="alert alert-warning">
            <p>You must be signed in to enter scores.</p>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    [Parameter]
    public string? ContestantId { get; set; }
}
